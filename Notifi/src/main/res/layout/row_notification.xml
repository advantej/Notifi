<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:padding="@dimen/padding_size_min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_application_icon"
        android:padding="@dimen/padding_size_min"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/tv_application_name"
        android:layout_toRightOf="@id/iv_application_icon"
        android:padding="@dimen/padding_size_min"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_notification_title"
        android:textSize="16sp"
        android:layout_toRightOf="@id/iv_application_icon"
        android:paddingBottom="@dimen/padding_size_min"
        android:paddingLeft="@dimen/padding_size_min"
        android:layout_below="@id/tv_application_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_notification_text"
        android:layout_toRightOf="@id/iv_application_icon"
        android:paddingBottom="@dimen/padding_size_min"
        android:paddingLeft="@dimen/padding_size_min"
        android:layout_below="@id/tv_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/v_indicator"
        android:layout_alignParentRight="true"
        android:layout_width="8dp"
        android:layout_height="8dp"/>

    <TextView
        android:id="@+id/tv_notification_time"
        android:layout_below="@id/tv_notification_text"
        android:layout_alignParentRight="true"
        android:textSize="10sp"
        android:textColor="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>